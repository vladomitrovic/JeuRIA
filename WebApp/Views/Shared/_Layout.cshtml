        $(document).ready(function () {
            
            $('.modal').modal();
            $('.sidenav').sidenav();
        });
    </script>

    <script>

        function signOut() {
            firebase.auth().signOut().then(function () {
                window.location.replace("/Home/Signin");
            }, function (error) {
                console.error('Sign Out Error', error);
            });
        }

    </script>

</body>
</html>
